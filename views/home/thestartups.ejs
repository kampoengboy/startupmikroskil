<div class="container">
  <div class="row">

    <div class="col-md-12">

      <div class="panel">
        <div class="panel-body">

          <% if(startup.length==0) { %>
                Belum ada startup yang terdaftar...!!!!
            <% } else { %>
            <% for(var i=0;i<startup.length;i++) { %>
              <div class="row">
                    <br>
                    <div class="col-md-2 col-sm-3 text-center">
                      <a class="story-img" href="<%=startup[i].link%>"><img src="<%=startup[i].img%>" style="width:100px;height:100px" class="img-circle"></a>
                    </div>
                    <div class="col-md-10 col-sm-9">
                      <h3><%=startup[i].title%></h3>
                      <a href="<%=startup[i].url%>"><%=startup[i].url%></a>
                      <br><br>
                      <div class="row">
                        <div class="col-xs-9">
                          <p style="text-align:justify"><%=startup[i].description%></p>
                          <p class="lead"><a class="btn btn-default" href="<%=startup[i].link%>">Read More</a></p>
                          </div>
                        <div class="col-xs-3"></div>
                      </div>
                      <br><br>
                    </div>
              </div>
              <hr>
            <% } %>
            <% var next = page + 1;%>
            <a href="/thestartups?page=<%=next%>" class="btn btn-primary pull-right btnNext">More <i class="glyphicon glyphicon-chevron-right"></i></a>
            <% } %>
          <!--/stories-->
        </div>
      </div>
   	</div><!--/col-12-->
  </div>
</div>
