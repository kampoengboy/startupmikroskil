<div class="container">
  <br>
<% if(flash) { %>
<% if(flash.err) { %>
      <div>
      <br><br>
      <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        <% Object.keys(flash.err).forEach(function(error) { %>
              <%= flash.err[error] %>
        <% }) %>
      </div>
      </div>
<% } else if (flash.success){ %>
  <div>
  <br><br>
  <div class="alert alert-success" role="alert">
    <span class="sr-only">Success:</span>
    <% Object.keys(flash.success).forEach(function(success) { %>
          <%= flash.success[success] %>
    <% }) %>
  </div>
  </div>
<% } %>
<% } %>
<div class="panel panel-primary">
    <div class="panel-heading">
      <h2 class="panel-title">Contact Us</h2>
    </div>
    <div class="panel-body">
          <form  method="post" action="/user/sendemail" class="form-horizontal" role="form">
          <div class="form-group">
          <label class="control-label col-lg-4 required">Name &#42;</label>
          <div class="col-lg-8">
          <input type="text" id="name" name="name" required="required" class="form-control" placeholder="Your Name">
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-4 required">Email &#42;</label>
          <div class="col-lg-8">
          <input type="email" id="email" name="email" required="required" class="form-control" placeholder="Your Email">
          </div>
          </div>
          <div class="form-group">
          <label class="control-label col-lg-4 required">Message &#42;</label>
          <div class="col-lg-8">
          <textarea class="form-control" style="resize: none; height:300px"placeholder="What's In Your Mind?" name="message"></textarea>
          </div>
          </div>
          <div class="form-group">
          <div class="col-lg-offset-4 col-lg-8">
          <button type="submit" id="send" class="btn-color btn btn-primary">Send Message</button>
          </div>
          </div>
          </form>
    </div>
  </div>
  </div>
